#!/bin/bash
#sudo dnf update

sudo dnf -y group install "C Development Tools and Libraries"
sudo dnf -y install libX11-devel
sudo dnf -y install libXinerama-devel
sudo dnf -y install pango-devel

sudo dnf -y install zsh
echo "export ZDOTDIR=~/.dotfiles/zsh" >> /etc/zshenv
sudo dnf -y install rxvt-unicode-256color
sudo dnf -y install i3
sudo dnf -y install i3lock
sudo dnf -y install i3status
sudo dnf -y install i3blocks
wget https://dl.google.com/linux/direct/google-chrome-stable_current_x86_64.rpm
sudo dnf -y install ./google*
chsh -s $(which zsh)
